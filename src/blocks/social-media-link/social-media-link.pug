mixin social-media-link(settings)
  - let socialLinks = []
  - if (settings) { 
  -   settings.hasOwnProperty("socialLinks") ? socialLinks = settings.socialLinks : twitterLink = []
  - }
  each socialLink in socialLinks
    - let name = ""
    - let link = ""
    - let iconSrc = ""
    - if (socialLink) { 
    -   socialLink.hasOwnProperty("name") ? name = `social-media-link_to_${socialLink.name}` : name = ""
    -   socialLink.hasOwnProperty("link") ? link = socialLink.link : link = "./for-change"
    -   socialLink.hasOwnProperty("iconSrc") ? iconSrc = socialLink.iconSrc : iconSrc = ""
    - }
    a(target="_blank" rel="noopener noreferrer" class="social-media-link" class=name, href=link)
      img(class="social-media-link__icon", src=iconSrc)