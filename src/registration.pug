include blocks/header/header.pug
include blocks/logo/logo.pug
include blocks/nav/nav.pug
include blocks/button/button.pug
include blocks/footer/footer.pug
include blocks/social-media-link/social-media-link.pug
include blocks/copyright/copyright.pug
include blocks/input/input.pug
include blocks/registration/registration.pug
include blocks/form-title/form-title.pug
include blocks/button/button.pug
include blocks/toggle/toggle.pug

doctype html
html
  head
    title 
    meta(charset="utf-8")
    meta(name="description" content="Registation page of the hotel room website.")
    meta(name="keywords" content="HTML, CSS, JavaScript")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
  body
    +header()
      +logo({
        src: "img/logo-color.svg"
      })
      +nav()
        +nav__link({
          links: [
            {"text": "О нас"},
            {"text": "Услуги", "type": "expanded"},
            {"text": "Вакансии"},
            {"text": "Новости"},
            {"text": "Соглашения", "type": "expanded"}
          ]
        })
      +header__buttons()
    main.main 
      +registration({
        action: "for-change"
      })
        +form-title({
          text: "Регистрация аккаунта"
        })
        .registration__personal-data.text_type_simple
          +input({
            attr: {
              "type": "text",
              "placeholder": "Имя"
            },
            length: "l",
            type: "simple"
          })
          +input({
            attr: {
              "type": "text",
              "placeholder": "Фамилия"
            },
            length: "l",
            type: "simple"
          })
        .registration__gender.text_type_simple
          +toggle({
            type: "radio",
            attr: {
              "type": "radio",
              "hidden": "hidden",
              "name": "gender",
              "value": "male",
              "checked": "checked"
            }
          })
            +toggle__mimic({type: "radio"})
            +toggle__text({text: "Мужчина"})
          +toggle({
            type: "radio",
            attr: {
              "type": "radio",
              "hidden": "hidden",
              "name": "gender",
              "value": "female"
            }
          })
            +toggle__mimic({type: "radio"})
            +toggle__text({text: "Женщина"})
        .registration__birthday.text_type_simple
          +input__title({text: "дата рождения"})
          +input({
            attr: {
              "type": "date",
              "placeholder": "ДД.ММ.ГГ",
            },
            length: "l",
            type: "date"
          })
        .registration__login-data.text_type_simple
          +input__title({text: "данные для входа в сервис"})
          +input({
            attr: {
              "type": "email",
              "placeholder": "Email"
            },
            length: "l",
            type: "simple"
          })
          +input({
            attr: {
              "type": "password",
              "placeholder": "Пароль"
            },
            length: "l",
            type: "simple"
          })
        .registration__special-toggle.text_type_simple
          +toggle({
            type: "toggle",
            attr: {
              "type": "checkbox",
              "hidden": "hidden"
            }
          })
            +toggle__mimic({type: "toggle"})
            +toggle__text({text: "Получать спецпредложения"})
        .registration__submit-button
          +button({
            type: "big",
            text: "перейти к оплате",
            attr: {"type": "submit"}
          })
        .registration__login-button
          p.text_type_simple.registration__login-text="Уже есть аккаунт на Toxin"
          +button({
            type: "border",
            text: "войти",
            attr: {"type": "button"}
          })
    footer.footer 
      +footer()
        +footer__description({
          text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
        })
        +footer__nav({
          lists: [
            [
              {"text": "навигация"}, 
              {"text": "О нас"},
              {"text": "Новости"},
              {"text": "Служба поддержки"},
              {"text": "Услуги"}
            ],
            [
              {"text": "о нас"}, 
              {"text": "О сервисе"},
              {"text": "Наша команда"},
              {"text": "Вакансии"},
              {"text": "Инвесторы"}
            ],
            [
              {"text": "Служба поддержки"}, 
              {"text": "Соглашения"},
              {"text": "Сообщества"},
              {"text": "Связь с нами"}
            ]
          ]
        })
        +footer__subscribe({
          title: "Подписка",
          text: "Получайте специальные предложения и новости сервиса"
        })
      +copyright({
        text: "Copyright © 2018 Toxin отель. Все права защищены."
      })