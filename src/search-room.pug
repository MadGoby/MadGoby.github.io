include blocks/header/header.pug
include blocks/logo/logo.pug
include blocks/nav/nav.pug
include blocks/button/button.pug
include blocks/footer/footer.pug
include blocks/social-media-link/social-media-link.pug
include blocks/copyright/copyright.pug
include blocks/input/input.pug
include blocks/slider/slider.pug
include blocks/toggle/toggle.pug
include blocks/list/list.pug
include blocks/dropdown/dropdown.pug
include blocks/room-card/room-card.pug
include blocks/room-info/room-info.pug
include blocks/rate-counter/rate-counter.pug

doctype html
html
  head
    title Search Room
    meta(charset="utf-8")
    meta(name="description" content="Search page of the hotel room website.")
    meta(name="keywords" content="HTML, CSS, JavaScript")
    meta(name="viewport" content="initial-scale=1.0, width=device-width")
  body
    header.search-room__header
      +header()
        +logo({
          src: "img/logo-color.svg"
        })
        +nav()
          +nav__link({
            links: [
              {"text": "О нас"},
              {"text": "Услуги", "type": "dropdown"},
              {"text": "Вакансии"},
              {"text": "Новости"},
              {"text": "Соглашения", "type": "dropdown"}
            ]
          })
        +header__buttons()
    main.search-room__main
      aside.search-room__sidebar
        .arrival-date.text_type_simple
          +input__title({text: "даты пребывания в отеле"})
          +input__label({type: "dropdown"})
            +input({
              attr: {
                "type": "text",
                "placeholder": "ДД.ММ.ГГ",
                "value": "19 авг - 23 авг",
                "readonly": "readonly"
              },
              length: "middle",
              type: "dropdown"
            })
        .guests-number.text_type_simple
          +input__title({text: "гости"})
          +input__label({type: "dropdown"})
            +input({
              attr: {
                "type": "text",
                "placeholder": "Сколько гостей",
                "value": "3 гостя, 1 младенец",
                "readonly": "readonly"
              },
              length: "middle",
              type: "dropdown"
            })
        .price-range.text_type_simple
          +slider__title({text: "диапазон цены"})
          +slider__output({jsClass: "js-slider__output"})
          +slider({jsClass: "js-slider"})
          +slider__text({text: "Стоимость за сутки пребывания в номере"})
        .house-rules.text_type_simple
          +toggle__title({text: "правила дома"})
          +toggle__label({type: "checkbox"})
            +toggle({
              type: "checkbox",
              attr: {
                "type": "checkbox",
                "hidden": "hidden"
              }
            })
            +toggle__mimic({type: "checkbox"})
            +toggle__text({text: "Можно курить"})
          +toggle__label({type: "checkbox"})
            +toggle({
              type: "checkbox",
              attr: {
                "type": "checkbox",
                "hidden": "hidden",
                "checked": "checked"
              }
            })
            +toggle__mimic({type: "checkbox"})
            +toggle__text({text: "Можно с питомцами"})
          +toggle__label({type: "checkbox"})
            +toggle({
              type: "checkbox",
              attr: {
                "type": "checkbox",
                "hidden": "hidden",
                "checked": "checked"
              }
            })
            +toggle__mimic({type: "checkbox"})
            +toggle__text({text: "Можно пригласить гостей (до 10 человек)"})
        .availability.text_type_simple
          +list__title({
            text: "доступность"
          })
          +list()
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                .toggle__text-wrapper
                  +toggle__text({text: "Широкий коридор", type: "rich"})
                  +toggle__text({text: "Ширина коридоров в номере не менее 91 см.", type: "little"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                .toggle__text-wrapper
                  +toggle__text({text: "Помощник для инвалидов", type: "rich"})
                  +toggle__text({text: "На 1 этаже вас встретит специалист  и проводит до номера.", type: "little"})
        .room-configutration
          +input__title({text: "удобства номера"})
          +input__label({type: "dropdown"})
            +input({
              attr: {
                "type": "text",
                "placeholder": "Text",
                "value": "2 спальни, 2 кровати...",
                "readonly": "readonly"
              },
              length: "middle",
              type: "dropdown",
              jsClass: "js-dropdown-input"
            })
          +dropdown({
            jsClass: "js-dropdown",
            attr: {
              "hidden": "hidden"
            }
          })
            +dropdown__list-body()
              +dropdown__list-element()
                +dropdown__text({text: "спальни"})
                +dropdown__calc()
                  +dropdown__button({
                    text: "-",
                    type: "minus",
                    attr: {
                      "data-target": "bedroom",
                      "data-action": "minus"
                    }
                  })
                  +dropdown__output({
                    text: "2",
                    attr: {
                      "data-target": "bedroom"
                    }
                  })
                  +dropdown__button({
                    text: "+",
                    type: "plus",
                    attr: {
                      "data-target": "bedroom",
                      "data-action": "plus"
                    }
                  })
              +dropdown__list-element()
                +dropdown__text({text: "кровати"})
                +dropdown__calc()
                  +dropdown__button({
                    text: "-",
                    type: "minus",
                    attr: {
                      "data-target": "bed",
                      "data-action": "minus"
                    }
                  })
                  +dropdown__output({
                    text: "2",
                    attr: {
                      "data-target": "bed"
                    }
                  })
                  +dropdown__button({
                    text: "+",
                    type: "plus",
                    attr: {
                      "data-target": "bed",
                      "data-action": "plus"
                    }
                  })
              +dropdown__list-element()
                +dropdown__text({text: "ванные комнаты"})
                +dropdown__calc()
                  +dropdown__button({
                    text: "-",
                    type: "minus",
                    attr: {
                      "data-target": "bathroom",
                      "data-action": "minus",
                      "class": "dropdown__button_type_transparent"
                    }
                  })
                  +dropdown__output({
                    text: "0",
                    attr: {
                      "data-target": "bathroom"
                    }
                  })
                  +dropdown__button({
                    text: "+",
                    type: "plus",
                    attr: {
                      "data-target": "bathroom",
                      "data-action": "plus"
                    }
                  })
        .additional-amenities.text_type_simple
          +list__title({
            text: "дополнительные удобства",
            type: "arrow-down",
            jsClass: "js-list__title"
          })   
          +list({
            jsClass: "js-list",
            attr: {
              "hidden": "hidden"
            }
          })
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Завтрак"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden",
                    "checked": "checked"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Письменный стол"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden",
                    "checked": "checked"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Стул для кормления"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden",
                    "checked": "checked"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Кроватка"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Телевизор"})
            +list__item()
              +toggle__label({type: "checkbox"})
                +toggle({
                  type: "checkbox",
                  attr: {
                    "type": "checkbox",
                    "hidden": "hidden"
                  }
                })
                +toggle__mimic({type: "checkbox"})
                +toggle__text({text: "Шампунь"})
      article.search-room__rooms
        h1.text_type_h1.search-room__rooms-title="Номера, которые мы для вас подобрали"
        .search-room__rooms-wrapper
          include search-rooms-cards/search-rooms-cards.pug
        .search-room__rooms-nav
          .pagination
            +button({
              type: "pagination",
              text: "1",
              attr: {"type": "button"}
            })
            +button({
              type: "pagination",
              text: "2",
              attr: {"type": "button"}
            })
            +button({
              type: "pagination",
              text: "3",
              attr: {"type": "button"}
            })
            +button({
              type: "pagination",
              text: "...",
              attr: {"type": "button"}
            })
            +button({
              type: "pagination",
              text: "15",
              attr: {"type": "button"}
            })
            +button({
              type: "pagination",
              text: "",
              attr: {"type": "button"}
            })
          +button__description({text: "1 – 15 из 100+ вариантов аренды"})
    footer.search-room__footer 
      +footer()
        +footer__logo({
          text: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
        })
        +footer__nav({
          lists: [
            [
              {"text": "навигация"}, 
              {"text": "О нас"},
              {"text": "Новости"},
              {"text": "Служба поддержки"},
              {"text": "Услуги"}
            ],
            [
              {"text": "о нас"}, 
              {"text": "О сервисе"},
              {"text": "Наша команда"},
              {"text": "Вакансии"},
              {"text": "Инвесторы"}
            ],
            [
              {"text": "Служба поддержки"}, 
              {"text": "Соглашения"},
              {"text": "Сообщества"},
              {"text": "Связь с нами"}
            ]
          ]
        })
        +footer__subscribe({
          title: "Подписка",
          text: "Получайте специальные предложения и новости сервиса"
        })
      +copyright({
        text: "Copyright © 2018 Toxin отель. Все права защищены."
      })