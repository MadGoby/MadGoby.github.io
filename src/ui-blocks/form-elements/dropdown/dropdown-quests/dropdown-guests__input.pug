mixin dropdown-guests(buttonID, divInput, labelclass, hint, appointment, state)
  if state !=null
    h3.margin-bottom-5px.type-h3(class= state)= appointment
    div.dropdown-guests-field-body(id= divInput)
      label.type-simple-text(class = labelclass)= hint
      button.dropdown-rooms-button-arrow(id= buttonID)
  else if appointment != null
    h3.margin-bottom-5px.type-h3= appointment
    div.dropdown-guests-field-body(id= divInput)
      label.type-simple-text(class = labelclass)= hint
      button.dropdown-rooms-button-arrow(id= buttonID)
  else
    div.dropdown-guests-field-body(id= divInput)
      label.type-simple-text(class = labelclass)= hint
      button.dropdown-rooms-button-arrow(id= buttonID)