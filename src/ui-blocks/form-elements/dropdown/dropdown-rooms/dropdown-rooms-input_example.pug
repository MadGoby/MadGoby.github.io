mixin dropdown-rooms-closed_example(hint, appointment, state)
  if state !=null
    h3.margin-bottom-5px.type-h3(class= state)= appointment
    div.dropdown-rooms-field-body
      label.type-simple-text.dropdown-rooms-label= hint
      button.dropdown-rooms-button-arrow
  else if appointment != null
    h3.margin-bottom-5px.type-h3= appointment
    div.dropdown-rooms-field-body
      label.type-simple-text.dropdown-rooms-label= hint
      button.dropdown-rooms-button-arrow
  else
    div.dropdown-rooms-field-body
      label.type-simple-text.dropdown-rooms-label= hint
      button.dropdown-rooms-button-arrow