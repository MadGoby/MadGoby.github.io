mixin dropdown-rooms-closed(hint, buttonID, appointment, state)
  if state !=null
    div.dropdown-rooms-body 
      h3.margin20.type-h3(class= state)= appointment
      div.dropdown-rooms-field-body(id = buttonID + "_border")
        label.type-simple-text.dropdown-rooms-label= hint
        button.dropdown-rooms-button-arrow(id= buttonID)
  else if appointment != null
    div.dropdown-rooms-body 
      h3.margin20.type-h3= appointment
      div.dropdown-rooms-field-body(id = buttonID + "_border") 
        label.type-simple-text.dropdown-rooms-label= hint
        button.dropdown-rooms-button-arrow(id= buttonID)
  else
    div.dropdown-rooms-body 
      div.dropdown-rooms-field-body(id = buttonID + "_border") 
        label.type-simple-text.dropdown-rooms-label= hint
        button.dropdown-rooms-button-arrow(id= buttonID)