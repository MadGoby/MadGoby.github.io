mixin dropdown-date(hint, appointment, state)
  if state !=null
    div.dropdown-date-body
      p.margin40.type-h3= appointment
      div
        label.type-simple-text.dropdown-date(class= state)= hint
  else if appointment != null
    div.dropdown-date-body 
      p.margin40.type-h3= appointment
      div
        label.type-simple-text.dropdown-date= hint
  else
    div.dropdown-date-body
      div
        label.type-simple-text.dropdown-date= hint