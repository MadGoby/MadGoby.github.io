mixin dropdown-date(hint, appointment, state)
  if state !=null
    div.dropdown-date-body
      p.type-h3= appointment
      div
        label.dropdown-date(class= state)= hint
        button.dropdown-date-button
  else if appointment != null
    div.dropdown-date-body 
      p.type-h3= appointment
      div
        label.dropdown-date= hint
        button.dropdown-date-button
  else
    div.dropdown-date-body
      div
        label.dropdown-date= hint
        button.dropdown-date-button